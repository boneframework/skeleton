    "ext-fileinfo": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-pdo": "*",
    "delboy1978uk/bone": "^3.10",
    "delboy1978uk/cdn": "^2.0",
    "delboy1978uk/image": "^2.1"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "delboy1978uk/dev-tools": "^1.0"
